<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen_Activity"
    android:background="#1A243C">
    <RelativeLayout
        android:id="@+id/cityTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cityshilouetteupsidedown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >
    </RelativeLayout>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="175dp"
        android:layout_height="157dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/logo_cpik"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/cityBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cityshilouette"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" ></RelativeLayout>
</android.support.constraint.ConstraintLayout>